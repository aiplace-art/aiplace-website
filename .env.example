# ============================================
# AIPLACE WEBSITE - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to version control

# ============================================
# SITE CONFIGURATION
# ============================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=AiPlace
NEXT_PUBLIC_SITE_DESCRIPTION="Your Partner in Digital Innovation & AI Solutions"

# ============================================
# EMAIL & CONTACT FORM
# ============================================
# Resend API for sending emails
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
CONTACT_EMAIL=hello@aiplace.com
CONTACT_EMAIL_FROM=noreply@aiplace.com

# ============================================
# ANALYTICS & TRACKING
# ============================================
# Google Analytics 4
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Vercel Analytics (automatically enabled on Vercel)
# No configuration needed

# ============================================
# CMS - SANITY.IO
# ============================================
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01
SANITY_API_TOKEN=skxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# DATABASE - POSTGRESQL
# ============================================
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/aiplace
DIRECT_URL=postgresql://user:password@localhost:5432/aiplace

# ============================================
# AUTHENTICATION - NEXTAUTH.JS
# ============================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# OAuth Providers (optional)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret

# ============================================
# AI ASSISTANT - ANTHROPIC CLAUDE
# ============================================
# Claude API Configuration (REQUIRED for AI chatbot)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxx
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096

# AI Assistant Settings
AI_ASSISTANT_ENABLED=true
AI_CONTEXT_MAX_MESSAGES=20
AI_CONVERSATION_TIMEOUT=1800000
AI_AUTO_LEAD_SCORING=true

# Rate Limiting for AI Endpoints
RATE_LIMIT_CHAT_STREAM_MAX=30
RATE_LIMIT_CHAT_MESSAGE_MAX=60
RATE_LIMIT_CONVERSATION_CREATE_MAX=10
RATE_LIMIT_WINDOW_MS=60000

# ============================================
# FILE UPLOADS - UPLOADTHING
# ============================================
# UPLOADTHING_SECRET=your_uploadthing_secret_here
# UPLOADTHING_APP_ID=your_app_id_here

# ============================================
# PAYMENT PROCESSING - STRIPE
# ============================================
# STRIPE_SECRET_KEY=your_stripe_secret_key_here
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
# STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# ============================================
# SEARCH - ALGOLIA
# ============================================
# NEXT_PUBLIC_ALGOLIA_APP_ID=XXXXXXXXXX
# NEXT_PUBLIC_ALGOLIA_SEARCH_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxx
# ALGOLIA_ADMIN_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# MONITORING & ERROR TRACKING
# ============================================
# Sentry
# NEXT_PUBLIC_SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx
# SENTRY_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_BLOG=true
NEXT_PUBLIC_ENABLE_BOOKING=true
NEXT_PUBLIC_ENABLE_CHATBOT=true
NEXT_PUBLIC_ENABLE_NEWSLETTER=true
NEXT_PUBLIC_ENABLE_SEARCH=true

# ============================================
# API RATE LIMITING
# ============================================
RATE_LIMIT_CONTACT_FORM_MAX=5
RATE_LIMIT_NEWSLETTER_MAX=3
RATE_LIMIT_API_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Set to 'development' or 'production'
NODE_ENV=development

# Enable detailed logging in development
LOG_LEVEL=info

# Disable analytics in development
NEXT_PUBLIC_ENABLE_ANALYTICS=false
