# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL connection string for Prisma
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://postgres:password@localhost:5432/aiplace?schema=public"

# Direct database URL for Prisma Migrate (bypasses connection pooling)
DIRECT_URL="postgresql://postgres:password@localhost:5432/aiplace?schema=public"

# Optional: Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_LOG_QUERIES=false

# ============================================
# EMAIL CONFIGURATION (RESEND)
# ============================================

# Resend API Key (get from https://resend.com)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Email addresses
FROM_EMAIL="noreply@aiplace.com"
ADMIN_EMAIL="contact@aiplace.com"
SUPPORT_EMAIL="support@aiplace.com"
NEWSLETTER_EMAIL="newsletter@aiplace.com"

# ============================================
# SECURITY
# ============================================

# Google reCAPTCHA v3 (get from https://www.google.com/recaptcha/admin)
RECAPTCHA_SECRET_KEY="your-recaptcha-secret-key"
NEXT_PUBLIC_RECAPTCHA_SITE_KEY="your-recaptcha-site-key"

# CSRF Protection
CSRF_SECRET="your-random-secret-key-here"

# NextAuth (if using authentication)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key"

# ============================================
# CRM INTEGRATION (OPTIONAL)
# ============================================

# HubSpot
HUBSPOT_API_KEY="your-hubspot-api-key"
HUBSPOT_PORTAL_ID="your-portal-id"

# Salesforce
SALESFORCE_INSTANCE_URL="https://your-instance.salesforce.com"
SALESFORCE_ACCESS_TOKEN="your-salesforce-access-token"
SALESFORCE_REFRESH_TOKEN="your-salesforce-refresh-token"
SALESFORCE_CLIENT_ID="your-client-id"
SALESFORCE_CLIENT_SECRET="your-client-secret"

# Pipedrive
PIPEDRIVE_API_TOKEN="your-pipedrive-api-token"
PIPEDRIVE_DOMAIN="your-company"

# ============================================
# APPLICATION SETTINGS
# ============================================

# Application URL
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Environment
NODE_ENV="development"

# API Configuration
CORS_ORIGIN="http://localhost:3000,https://aiplace.com"

# ============================================
# ANALYTICS (OPTIONAL)
# ============================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# ============================================
# CMS INTEGRATION (SANITY.IO) - OPTIONAL
# ============================================

# Sanity
NEXT_PUBLIC_SANITY_PROJECT_ID="your-project-id"
NEXT_PUBLIC_SANITY_DATASET="production"
SANITY_API_TOKEN="your-sanity-api-token"

# ============================================
# FILE STORAGE (OPTIONAL)
# ============================================

# AWS S3
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="aiplace-uploads"

# Cloudinary
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# ============================================
# MONITORING & LOGGING (OPTIONAL)
# ============================================

# Sentry
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"

# LogRocket
NEXT_PUBLIC_LOGROCKET_ID="your-logrocket-id"

# ============================================
# AI ASSISTANT CONFIGURATION
# ============================================

# Anthropic Claude API
ANTHROPIC_API_KEY="sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxx"
ANTHROPIC_MODEL="claude-3-5-sonnet-20241022"
ANTHROPIC_MAX_TOKENS="4096"

# AI Assistant Settings
AI_ASSISTANT_ENABLED="true"
AI_CONTEXT_MAX_MESSAGES="20"
AI_CONVERSATION_TIMEOUT="1800000"
AI_AUTO_LEAD_SCORING="true"

# Rate Limiting for AI Endpoints
RATE_LIMIT_CHAT_STREAM_MAX="30"
RATE_LIMIT_CHAT_MESSAGE_MAX="60"
RATE_LIMIT_CONVERSATION_CREATE_MAX="10"
RATE_LIMIT_WINDOW_MS="60000"

# Admin API
ADMIN_API_KEY="your-secure-admin-api-key-here"

# Analytics Retention
ANALYTICS_RETENTION_DAYS="90"
